<div class="table-responsive">
    <table  class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Clave Producto</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Opciones</th>
            </tr>
        </thead>
        
        <tbody class="table-group-divider">
        {% for producto in productos %}
        <tr>
            <td>{{ producto.claveProducto }}</td>
            <td>{{ producto.nombre }}</td>
            <td>${{ producto.precio }}</td>
            <td>
            <a href="{{ path('page_producto_editar', {claveProducto: producto.claveProducto}) }}" class="btn btn-sm btn-warning confirm-edit">Editar</a>
            <a href="{{ path('func_producto_borrar', {claveProducto: producto.claveProducto}) }}" class="btn btn-sm btn-danger confirm-delete">Borrar</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
