{# Card "Agregar Producto" #}
<div class="mt-3 d-flex flex-row ">
    <div class="w-100 card shadow">
      <div class="card-header  fs-4 fw-semibold mb -3">Agregar Producto</div>
      <div>
        <form action="{{ path('func_producto_create') }}" method="POST" class="container d-flex flex-row justify-content-around card-body">
        <div class="d-flex flex-column">
          <p class="align-self-center">Clave del Producto</p>
          <div class="input-group flex-nowrap">
            <input type="text" name="claveProducto" class="form-control" aria-describedby="addon-wrapping">
          </div>
        </div>

        <div class="d-flex flex-column">
          <p class="align-self-center">Nombre del Producto</p>
          <div class="input-group flex-nowrap">
            <input type="text" name="nombre" class="form-control" aria-describedby="addon-wrapping">
          </div>
        </div>

        <div class="d-flex flex-column">
          <p class="align-self-center">Precio</p>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" name="precio" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
          </div>
        </div>
      </div>
      <div class="card-body"> 
        <button type="submit" class="mt-2 mb-2 float-end btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Agregar </button>
      </div>
      </form>
    </div>
  </div>